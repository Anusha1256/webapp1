pipeline {
    agent any

   tools {
jdk 'JAVA1.8'

    stages {
        stage('CLONE SCM') {
            steps {
                echo 'cloning code from Github'
				git branch: 'main', url: 'https://github.com/devopstraininghub/webapp1.git'
            }
        }
		
				
		stage('SONARQUBE ANALYSIS') {
            steps {
                echo 'Code is scanned with sonarqube tool'
				sh 'mvn clean sonar:sonar'
            }
        }


               stage('Build Artifact and pushing to nexus') {
            steps {
                echo 'Build Artifact with maven build tool and pushed to nexus artifactory'
				sh 'mvn clean deploy'
            }
        }            
		
		stage('Deploy') {
            steps {
                echo 'Deploy to tomcat ap/n server '
				deploy adapters: [tomcat9(credentialsId: 'tomcat-creds', path: '', url: 'http://54.90.13.214:8091/')], contextPath: 'webapp', war: '**/*.war'
            }
        }
    }
}


