pipeline {
    agent any

 stages {
        stage('CLONE SCM') {
            steps {
                echo 'cloning code from Github'
				git branch: 'main', url: 'https://github.com/devopstraininghub/webapp1.git'
            }
        }
		
				
		stage('SONARQUBE ANALYSIS & pushing to nexus') {
            steps {
                echo 'Code is scanned with sonarqube tool and pushed artifact to nexus'
				sh 'mvn clean sonar:sonar deploy'
            }
        }        
		
		stage('Deploy') {
            steps {
                echo 'Deploy to tomcat ap/n server '
				deploy adapters: [tomcat9(credentialsId: 'tomcat-creds', path: '', url: 'http://54.90.13.214:8091/')], contextPath: 'webapp', war: '**/*.war'
            }
        }
    }
}


